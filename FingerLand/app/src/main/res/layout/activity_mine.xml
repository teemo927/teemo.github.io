<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <!--头部-->
    <FrameLayout
        android:id="@+id/fl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/mine_bg"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_92"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_user_login"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:src="@drawable/user_login"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="兰江集团"
                android:textColor="@color/word_important"
                android:textSize="@dimen/sp_16"/>
        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_20"
        android:src="@drawable/youshangjiao_touming_btn"/>

    <com.lanjiang.figersland.widget.LineGridView
        android:numColumns="3"
        android:id="@+id/gv_mine_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fl_top"
        android:layout_marginTop="@dimen/dp_30"/>

</RelativeLayout>