<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_root"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_12"
        android:text="深圳旧改项目招募成员"
        android:textColor="@color/word_important"
        android:textSize="@dimen/sp_16" />

    <!--招募介绍-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/white"
        android:orientation="horizontal">

        <include
            android:id="@+id/icon1"
            layout="@layout/view_blue"
            android:layout_width="@dimen/dp_4"
            android:layout_height="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_8"
            android:text="@string/recruiting_introduce"
            android:textColor="@color/word_important"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <!--华丽分割线-->
    <include layout="@layout/view_divider_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dp_12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/dp_3"
            android:text="本次招募范围为深圳盐田区旧改项目项目阶段为申请阶段招募项目组相关成员。本次招募范围为深圳盐田区旧改项目，项目阶段为申请阶段，招募项目组相关成员。本次招募范围为深圳盐田区旧改项目，项目阶段为申请阶段，招募项目组相关成员。"
            android:textColor="@color/word_normal"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <!--申请成为-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/applied_for"
                android:textColor="@color/word_important"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/applied_for_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="项目经理"
                android:textColor="@color/color_main"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
    </RelativeLayout>

    <!--订单状态-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_status2"
                android:textColor="@color/word_important"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/order_status2_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待确认"
                android:textColor="@color/money"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>