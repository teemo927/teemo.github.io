<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adapter_yipai"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_12"
    android:background="@drawable/selector_adapter_papers"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_12"
    android:paddingLeft="@dimen/dp_12">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:text="深圳旧改项目招募成员"
            android:textColor="@color/word_important"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/location_bg"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_12"
            android:text="连云港"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>

    <include layout="@layout/line_horizontal" />

    <TextView
        android:id="@+id/tv_member_has"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:text="@string/member_has_num"
        android:textColor="@color/word_important" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_more_has"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_12"
            android:text="..."
            android:textColor="@color/color_main" />

        <com.lanjiang.figersland.widget.FlowLayout
            android:id="@+id/llt_member_has"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_toLeftOf="@id/tv_more_has"
            android:orientation="horizontal" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_member_off"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:text="@string/member_off_num"
        android:textColor="@color/word_important" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_more_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_12"
            android:text="..."
            android:textColor="@color/color_main" />

        <com.lanjiang.figersland.widget.FlowLayout
            android:id="@+id/llt_member_off"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_toLeftOf="@id/tv_more_off"
            android:orientation="horizontal" />
    </RelativeLayout>

</LinearLayout>