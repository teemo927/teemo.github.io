<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_position_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <!--信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_margin="@dimen/dp_8"
            android:src="@drawable/lanjianglogo" />

        <TextView
            android:id="@+id/tv_person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="宋小亮"
            android:textColor="@color/word_important"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <!--按钮-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8">

        <TextView
            android:id="@+id/btn_agree"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_26"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@drawable/shape_btn_gray"
            android:gravity="center"
            android:text="@string/agree"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/btn_refuse"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_26"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_toLeftOf="@id/btn_agree"
            android:background="@drawable/shape_btn_gray"
            android:gravity="center"
            android:text="@string/refuse"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/btn_leave_word"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_26"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_toLeftOf="@id/btn_refuse"
            android:background="@drawable/shape_btn_gray"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_18"
            android:text="@string/leave_word"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp_12" />

        <!--留言-->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_44"
            android:layout_toLeftOf="@id/btn_refuse">

            <ImageView
                android:id="@+id/iv_leave_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/liuyan_icon" />
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>
