<?xml version="1.0" encoding="utf-8"?>
<com.lanjiang.figersland.widget.MyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_root">

    <LinearLayout
        android:id="@+id/activity_gaoren_requisition"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:text="@string/requisitiom_title"
                android:textColor="@color/word_important"
                android:textSize="@dimen/sp_14" />

            <include layout="@layout/line_vertical" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="0dp"
                android:text="上来露个脸"
                android:textColor="@color/word_normal"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <include layout="@layout/line_horizontal" />

        <LinearLayout
            android:id="@+id/llt_area"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:text="@string/handle_area"
                android:textColor="@color/word_important"
                android:textSize="@dimen/sp_14" />

            <include layout="@layout/line_vertical" />

            <TextView
                android:id="@+id/tv_area"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="深圳"
                android:textColor="@color/word_normal"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_12"
                android:src="@drawable/xiala_2_icon" />
        </LinearLayout>

        <include layout="@layout/line_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:text="@string/requisition_money"
                android:textColor="@color/word_important"
                android:textSize="@dimen/sp_14" />

            <include layout="@layout/line_vertical" />

            <TextView
                android:id="@+id/tv_reward"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="0dp"
                android:text="￥8000.00"
                android:textColor="@color/word_normal"
                android:textSize="@dimen/sp_14" />

            <include layout="@layout/line_vertical" />

        </LinearLayout>

        <include layout="@layout/line_horizontal" />

        <com.lanjiang.figersland.widget.ImageText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_12"
            android:text="@string/requisition_time"
            android:textColor="@color/word_important"
            android:textSize="@dimen/sp_14" />

        <include layout="@layout/line_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_8"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"
                android:paddingTop="@dimen/dp_12">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/start_time"
                    android:textColor="@color/word_important"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_30"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/end_time"
                    android:textColor="@color/word_important"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/duration_time"
                    android:textColor="@color/word_important"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_12"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12">

                <TextView
                    android:id="@+id/btn_start_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_date"
                    android:gravity="center"
                    android:text="2016-12-02"
                    android:textColor="@color/word_normal"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/btn_end_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_30"
                    android:layout_weight="1"
                    android:background="@drawable/selector_date"
                    android:gravity="center"
                    android:text="2017-01-02"
                    android:textColor="@color/word_normal"
                    android:textSize="@dimen/sp_14" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="31"
                        android:textColor="@color/color_main"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_duration"
                        android:gravity="center"
                        android:text="@string/days"
                        android:textColor="@color/word_normal"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <com.lanjiang.figersland.widget.ImageText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_12"
            android:text="@string/requisition_reason"
            android:textColor="@color/word_important"
            android:textSize="@dimen/sp_14" />

        <include layout="@layout/line_horizontal" />

        <EditText
            android:id="@+id/et_reason"
            style="@style/EditTextAppearance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="@string/papers_requirements"
            android:padding="@dimen/dp_12"
            android:textColor="@color/word_normal"
            android:textSize="@dimen/sp_14" />

        <RelativeLayout
            android:id="@+id/rlt_agree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:gravity="center"
            android:text="@string/submit"
            android:textColor="@color/white">

            <CheckBox
                android:id="@+id/cb_agree"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_margin="@dimen/dp_4"
                android:background="@drawable/selector_checkbox_style_agree"
                android:button="@null"
                android:gravity="center" />

            <TextView
                android:id="@+id/tv_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cb_agree"
                android:gravity="center"
                android:text="@string/agree_rules"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/sp_12" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_msg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_rules"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tv_msg"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_msg"
                    android:gravity="center"
                    android:text="@string/on_requisition_rules"
                    android:textColor="@color/color_main"
                    android:textSize="@dimen/sp_12" />

                <include
                    layout="@layout/view_blue"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/tv_rules"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_toRightOf="@id/tv_msg" />
            </LinearLayout>

        </RelativeLayout>


        <Button
            android:id="@+id/btn_submit"
            android:layout_width="@dimen/dp_320"
            android:layout_height="@dimen/dp_44"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@drawable/blue_btn"
            android:text="@string/submit"
            android:textColor="@color/white" />
    </LinearLayout>
</com.lanjiang.figersland.widget.MyScrollView>
