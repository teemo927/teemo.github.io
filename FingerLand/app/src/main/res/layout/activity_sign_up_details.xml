<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/activity_sign_up_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_root"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/TextAppearance"
                android:text="@string/company_name" />

            <include layout="@layout/line_vertical" />

            <EditText
                android:id="@+id/et_company_name"
                style="@style/EditTextAppearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:hint="兰江集团"
                android:textColor="@color/divider_line_color"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <include layout="@layout/line_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/TextAppearance"
                android:text="@string/service_zone" />

            <include layout="@layout/line_vertical" />

            <EditText
                android:id="@+id/et_service_zone"
                style="@style/EditTextAppearance"
                android:hint="请输入公司服务区域"
                android:layout_marginLeft="@dimen/dp_12"/>

        </LinearLayout>

        <include layout="@layout/line_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/TextAppearance"
                android:text="@string/register_money" />

            <include layout="@layout/line_vertical" />

            <EditText
                android:id="@+id/et_register_money"
                style="@style/EditTextAppearance"
                android:hint="50万"
                android:layout_marginLeft="@dimen/dp_12"/>

        </LinearLayout>

        <include layout="@layout/line_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/TextAppearance"
                android:text="@string/contact_information" />

            <include layout="@layout/line_vertical" />

            <EditText
                android:id="@+id/et_contact_information"
                style="@style/EditTextAppearance"
                android:hint="请输入联系方式"
                android:layout_marginLeft="@dimen/dp_12" />

        </LinearLayout>

        <include layout="@layout/line_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/TextAppearance"
                android:text="@string/contact_addr" />

            <include layout="@layout/line_vertical" />

            <EditText
                android:id="@+id/et_contact_addr"
                style="@style/EditTextAppearance"
                android:hint="请输入联系地址"
                android:layout_marginLeft="@dimen/dp_12" />

        </LinearLayout>

        <include layout="@layout/line_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/TextAppearance"
                android:text="@string/main_business" />

            <include layout="@layout/line_vertical" />

            <EditText
                android:id="@+id/et_main_business"
                style="@style/EditTextAppearance"
                android:hint="请输入公司主营业务"
                android:layout_marginLeft="@dimen/dp_12" />

        </LinearLayout>

        <include layout="@layout/line_horizontal" />

        <com.lanjiang.figersland.widget.ImageText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_12"
            android:text="@string/sign_up_simple_desc" />

        <include layout="@layout/line_horizontal" />

        <EditText
            style="@style/EditTextAppearance"
            android:layout_height="@dimen/dp_72"
            android:layout_marginLeft="0dp"
            android:background="@color/white"
            android:gravity="top"
            android:hint="简要描述"
            android:padding="12dp"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp_14" />

        <include layout="@layout/line_horizontal" />

        <LinearLayout
            android:id="@+id/llt_file_upload"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12">

            <ImageView
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:src="@drawable/folder" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:text="@string/file_upload"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_doc_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:background="@color/background_root"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_8"
                android:text="文件名"
                android:textColor="@color/divider_line_color"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@drawable/blue_btn"
            android:gravity="center"
            android:text="@string/submit"
            android:textColor="@color/white" />

    </LinearLayout>
</ScrollView>
