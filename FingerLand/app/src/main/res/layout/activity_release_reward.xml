>>>>>>> .r84
            </RelativeLayout>
        </LinearLayout>

        <!--招标详情-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12">

                <include
                    android:id="@+id/icon3"
                    layout="@layout/view_blue"
                    android:layout_width="@dimen/dp_4"
                    android:layout_height="@dimen/dp_16"
                    android:layout_centerVertical="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/icon3"
                    android:text="@string/the_tender_details"
                    android:textColor="@color/word_normal"
                    android:textSize="@dimen/sp_14" />

            </RelativeLayout>

            <!--华丽分割线-->
            <include layout="@layout/view_divider_line" />


            <EditText
                android:id="@+id/et_necessary_conditions"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_72"
                android:background="@null"
                android:gravity="top"
                android:hint="@string/necessary_conditions"
                android:paddingBottom="@dimen/dp_14"
                android:paddingLeft="@dimen/dp_12"
                android:paddingTop="@dimen/dp_14"
                android:textColorHint="@color/text_gray"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <!--悬赏金额-->
        <RelativeLayout
            android:id="@+id/rl_rewards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/white"
            android:paddingBottom="@dimen/dp_12"
            android:paddingLeft="@dimen/dp_12"
            android:paddingTop="@dimen/dp_12">

            <TextView
                android:id="@+id/tv_rewards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/rewards"
                android:textColor="@color/word_normal"
                android:textSize="@dimen/sp_14" />

            <include
                android:id="@+id/vertical_line4"
                layout="@layout/line_vertical"
                android:layout_width="@dimen/dp_0.5dp"
                android:layout_height="@dimen/dp_15dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/tv_rewards" />

            <TextView
                android:id="@+id/tv_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_toRightOf="@id/vertical_line4"
                android:text="@string/currency_China"
                android:textColor="@color/money"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_toRightOf="@id/tv_currency"
                android:background="@null"
                android:hint="@string/input_reward"
                android:inputType="numberDecimal"
                android:textColor="@color/money"
                android:textColorHint="@color/divider_line_color"
                android:textSize="@dimen/sp_16" />

        </RelativeLayout>

        <Button
            android:id="@+id/btn_next_step"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@drawable/blue_btn"
            android:text="@string/next_step"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

</ScrollView>